<% if notice.present? %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg relative mb-6" role="alert">
    <span class="block sm:inline"><%= notice %></span>
  </div>
<% end %>

<div class="mb-6">
  <p class="text-gray-600 text-lg">
    You have <span class="font-semibold text-blue-600"><%= @pokemons.length %></span> Pok√©mon in your collection.
  </p>
</div>

<div id="pokemons" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
  <% @pokemons.each do |pokemon| %>
    <%= render pokemon %>
  <% end %>
</div>